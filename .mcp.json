{
  "mcpServers": {
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      }
    },
    "mailerlite": {
      "type": "http",
      "url": "https://mcp.mailerlite.com/mcp",
      "headers": {
        "Authorization": "Bearer ${MAILERLITE_API_KEY}"
      }
    }
  }
}
